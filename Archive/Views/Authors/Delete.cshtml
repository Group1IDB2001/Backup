@model Author
@{
    ViewBag.Title = "Delete Author";
}
<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Details confirmation for author </h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="form-group">
					<label asp-for="@Model.Name" class="control-lable"></label>
					<input asp-for="Name" class="form-control" readonly />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Born" class="control-lable"></label>
					<input asp-for="Born" class="form-control" readonly />
					<span asp-validation-for="Born" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Death" class="control-lable"></label>
					<input asp-for="Death" class="form-control" readonly />
					<span asp-validation-for="Death" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="About" class="control-lable"></label>
					<input asp-for="About" class="form-control" readonly />
					<span asp-validation-for="About" class="text-danger"></span>
				</div>

				<div class="form-group">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id"/>
						<input type="submit" value="Confirm" class="btn btn-danger float-right"  />
					</form>
					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>

				</div>

			</div>
		</div>
	</div>
</div>
